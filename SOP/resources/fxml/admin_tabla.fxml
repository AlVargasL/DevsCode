<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.Region?>

<?import javafx.scene.layout.StackPane?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            stylesheets="@../css/admin_dashboard.css"
            fx:controller="controller.AdminTablaController"
            prefHeight="900" prefWidth="1450" maxWidth="1450">

    <!-- Lado izquierdo: TextField y Botón en horizontal -->

    <!-- Centro: Tabla centrada abajo -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="20" prefWidth="1200">
            <!-- Barra de búsqueda centrada -->
            <HBox spacing="10" alignment="TOP_LEFT" style="-fx-padding: 0 0 0 10;">
                <TextField fx:id="txtBuscar" prefWidth="500" style="-fx-font-size: 15px;" promptText="Buscar objeto"/>
            </HBox>

            <!-- Tabla centrada -->
            <TableView fx:id="tablaObjetos" maxWidth="1200" prefWidth="1200" prefHeight="600">
                <columns>
                    <TableColumn fx:id="colImagen" text="Imagen"/>
                    <TableColumn fx:id="colNombre" text="Nombre"/>
                    <TableColumn fx:id="colMarca" text="Marca"/>
                    <TableColumn fx:id="colColor" text="Color"/>
                    <TableColumn fx:id="colDescripcion" text="Descripción"/>
                    <TableColumn fx:id="colEstado" text="Estado"/>
                    <TableColumn fx:id="colAcciones" text="Acciones"/>
                </columns>
            </TableView>
        </VBox>
    </center>

</BorderPane>